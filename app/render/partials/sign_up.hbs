<div class="anime-cb-screen-sign-up anime-cb-screen">
	<div class="center-screen">
		<div class="anime-cb-title-page">
			<h1>Sign Up</h1>
		</div>
		<div class="user-message"></div>
		<form id="anime-cb-form-sign-up" class="anime-cb-form" action="#">
		  <div class="form-group">
		    <label for="username-sign-up">Username:</label>
		    <input type="text" class="form-control" id="username-sign-up" name="username">
		    <div class="errors"></div>
		  </div>
		  <div class="form-group">
		    <label for="email-sign-up">Email address:</label>
		    <input type="text" class="form-control" id="email-sign-up" name="email">
		    <div class="errors"></div>
		  </div>
		  <div class="form-group">
		    <label for="password-sign-up">Password:</label>
		    <input type="password" class="form-control" id="password-sign-up" name="password">
		    <div class="errors"></div>
		  </div>
		  <div class="form-group">
		    <label for="conf_password-sign-up">Confirm Password:</label>
		    <input type="password" class="form-control" id="conf_password-sign-up" name="conf_password">
		    <div class="errors"></div>
		  </div>
		  <img class="spinner" src="/imgs/spinner.gif">
		  <button id="anime-cb-submit-sign-up" class="btn btn-default">Submit</button>
		  <button id="anime-cb-reset-sign-up" class="btn btn-default">Reset</button>
		</form>
		<div class="anime-cb-screen_footer">
			<button type="button" class="btn btn-primary anime-cb-button anime-cb-btn-main-menu">Main Menu</button>
			<button type="button" class="btn btn-primary anime-cb-button anime-cb-btn-login">Login</button>
		</div>
	</div>
</div>