<div class="anime-cb-sign-up anime-cb-screen">
	<div class="center-screen">
		<div class="anime-cb-page-title">
			<h1>Sign Up</h1>
		</div>
		<div class="user-message"></div>
		<form id="anime-cb-signup-form" class="anime-cb-form" action="#">
		  <div class="form-group">
		    <label for="username-signup">Username:</label>
		    <input type="text" class="form-control" id="username-signup" name="username">
		    <div class="errors"></div>
		  </div>
		  <div class="form-group">
		    <label for="email-signup">Email address:</label>
		    <input type="text" class="form-control" id="email-signup" name="email">
		    <div class="errors"></div>
		  </div>
		  <div class="form-group">
		    <label for="password-signup">Password:</label>
		    <input type="password" class="form-control" id="password-signup" name="password">
		    <div class="errors"></div>
		  </div>
		  <div class="form-group">
		    <label for="conf_password-signup">Confirm Password:</label>
		    <input type="password" class="form-control" id="conf_password-signup" name="conf_password">
		    <div class="errors"></div>
		  </div>
		  <img class="spinner" src="/imgs/spinner.gif">
		  <button id="anime-cb-submit-sign-up" class="btn btn-default ">Submit</button>
		  <button id="anime-cb-reset-sign-up" class="btn btn-default">Reset</button>
		</form>
		<div class="anime-cb-screen-footer">
			<button type="button" class="btn btn-primary anime-cb-button main-menu-btn">Main Menu</button>
			<button type="button" class="btn btn-primary anime-cb-button login-btn">Login</button>
		</div>
	</div>
</div>