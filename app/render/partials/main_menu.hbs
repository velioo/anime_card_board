<div class="anime-cb-screen-main-menu anime-cb-screen">
	<div class="center-screen">
		<div class="anime-cb-title-page">
			<h1>Welcome to Anime Card Board Game</h1>
		</div>
		{{#if userMessage}}
			<div class="user-message">{{userMessage}}</div>
		{{/if}}
		<div class="btn-group-vertical anime-cb-btn-group">
		{{#if session.isUserLoggedIn}}
			<button type="button" class="btn btn-primary anime-cb-button logged-in anime-cb-btn-play">Play</button>
		    <button type="button" class="btn btn-primary anime-cb-button logged-in anime-cb-btn-settings">Settings</button>
		    <button type="button" class="btn btn-primary anime-cb-button anime-cb-btn-info">Game Info</button>
		    <img class="pre-screen-spinner" src="/imgs/spinner.gif">
		    <button id="anime-cb-logout-btn" type="button" class="btn btn-primary anime-cb-button-stateless logged-in">Log Out</button>
		    <button type="button" class="btn btn-primary anime-cb-button logged-out anime-cb-btn-sign-up" style="display: none;">Sign Up</button>
		    <button type="button" class="btn btn-primary anime-cb-button logged-out anime-cb-btn-login" style="display: none;">Login</button>
		{{else}}
			<button type="button" class="btn btn-primary anime-cb-button logged-in anime-cb-btn-play" style="display: none;">Play</button>
		    <button type="button" class="btn btn-primary anime-cb-button logged-in anime-cb-btn-settings" style="display: none;">Settings</button>
		    <button type="button" class="btn btn-primary anime-cb-button anime-cb-btn-info">Game Info</button>
		    <img class="pre-screen-spinner" src="/imgs/spinner.gif">
		   	<button id="anime-cb-logout-btn" type="button" class="btn btn-primary anime-cb-button-stateless logged-in" style="display: none;">Log Out</button>
		    <button type="button" class="btn btn-primary anime-cb-button logged-out anime-cb-btn-sign-up">Sign Up</button>
		    <button type="button" class="btn btn-primary anime-cb-button logged-out anime-cb-btn-login">Login</button>
		{{/if}}
	 	</div>
	</div>
</div>