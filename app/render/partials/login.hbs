<div class="anime-cb-screen-login anime-cb-screen">
	<div class="center-screen">
		<div class="anime-cb-title-page">
			<h1>Login</h1>
		</div>
		<div class="user-message"></div>
		<form id="anime-cb-form-login" class="anime-cb-form" action="#">
		  <div class="form-group">
		    <label for="username-login">Username:</label>
		    <input type="text" class="form-control" id="username-login" name="username">
		    <div class="errors"></div>
		  </div>
		  <div class="form-group">
		    <label for="password-login">Password:</label>
		    <input type="password" class="form-control" id="password-login" name="password">
		    <div class="errors"></div>
		  </div>
		  <img class="spinner" src="/imgs/spinner.gif">
		  <button id="anime-cb-submit-login" type="submit" class="btn btn-default">Submit</button>
		  <button id="anime-cb-reset-login" class="btn btn-default">Reset</button>
		</form>
		<div class="anime-cb-screen_footer">
			<button type="button" class="btn btn-primary anime-cb-button main-menu-btn">Main Menu</button>
			<button type="button" class="btn btn-primary anime-cb-button sign-up-btn">Sign Up</button>
		</div>
	</div>
</div>